{
  "compilerOptions": {
    "types": ["mocha", "chai"],
    "typeRoots": ["../node_modules/@types"],
    "lib": ["es2021", "DOM"],
    "module": "commonjs",
    "target": "es2021",
    "moduleResolution": "Node",
    "sourceMap": true,
    "strict": true,
    "resolveJsonModule": true,
    "declaration": true,
    "declarationMap": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "outDir": "dist"
  },
  "include": ["src/**/*"]
}
