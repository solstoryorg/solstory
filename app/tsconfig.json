{
  "compilerOptions": {
    "types": ["mocha", "chai"],
    "typeRoots": ["./node_modules/@types"],
    "lib": ["es2020", "dom"],
    "jsx": "react-jsx",
    "jsxImportSource": "react",
    "resolveJsonModule": true,
    "module": "es6",
    "moduleResolution": "Node",
    "target": "es2021",
    "esModuleInterop": true,
    "declarationMap": true,
    "allowSyntheticDefaultImports": true,
    "declaration":true
  },
  "include": ["src/**/*.tsx"]
}
