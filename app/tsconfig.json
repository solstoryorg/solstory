{
  "compilerOptions": {
    "types": ["mocha", "chai"],
    "typeRoots": ["./node_modules/@types"],
    "lib": ["es2020", "dom"],
    "jsx": "react-jsx",
    "jsxImportSource": "react",
    "resolveJsonModule": true,
    "module": "es6",
    "moduleResolution": "Node",
    "target": "es2021",
    "esModuleInterop": true,
    "declarationMap": true,
    "allowSyntheticDefaultImports": true,
    "declaration":true,
    // "noImplicitAny": false, //temporary fix for isseu where metaplex depends on spl-token 1.8.0 which depends on buffer-layout which doesn't have types. Sigh.
    "outDir": "compiled",
    "composite": true
  },
  "references": [
    {
      "path": "../api/tsconfig.json"
    }
  ],
  "include": ["src/**/*"]
}
